{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "paths": {
      "kleur/colors": ["./node_modules/kleur/colors.d.ts"]
    },
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "types": ["vitest/importMeta"]
  },
  "include": ["**/*.ts"]
}
