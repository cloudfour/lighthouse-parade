{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "paths": {
      "timekeeper": ["./node_modules/timekeeper/index.d.ts"],
      "kleur/colors": ["./node_modules/kleur/colors.d.ts"]
    },
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["**/*.ts"]
}
