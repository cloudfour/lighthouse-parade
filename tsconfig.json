{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "types": ["vitest/importMeta"],
    "checkJs": true,
    "rootDir": "."
  },
  "include": ["**/*.ts"]
}
