{
  "name": "lighthouse-parade",
  "version": "2.1.0",
  "description": "A Node.js command line tool that crawls a domain and compiles a report with Lighthouse performance data for every page.",
  "bin": "./index.mjs",
  "files": [
    "dist/*.js"
  ],
  "repository": "cloudfour/lighthouse-parade",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "check-lint": "eslint . && prettier --check .",
    "lint": "eslint --fix . && prettier --write .",
    "type": "tsc",
    "type:watch": "tsc --watch",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "changeset": "changeset",
    "version": "changeset version && prettier --write .",
    "release": "npm run type && npm run build && changeset publish"
  },
  "author": "info@cloudfour.com",
  "license": "MIT",
  "dependencies": {
    "@googleapis/sheets": "^5.0.3",
    "chrome-launcher": "^1.0.0",
    "globrex": "^0.1.2",
    "google-auth-library": "^9.0.0",
    "kleur": "^4.1.5",
    "lighthouse": "^11.0.0",
    "log-update": "^5.0.1",
    "open": "^9.1.0",
    "sade": "^1.8.1",
    "simplecrawler": "^1.1.9",
    "string-width": "^6.1.0",
    "tinydate": "^1.3.0",
    "zod": "^3.22.2"
  },
  "engines": {
    "node": "^16.0.0 || ^18.0.0 || ^20.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@cloudfour/eslint-plugin": "^23.0.0",
    "@types/globrex": "^0.1.2",
    "@types/node": "^20.5.4",
    "@types/sade": "^1.7.4",
    "@types/simplecrawler": "^1.1.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "import-meta-resolve": "^3.0.0",
    "prettier": "^3.0.2",
    "pretty-bytes": "^6.1.1",
    "rollup": "^3.28.1",
    "rollup-plugin-dts": "^6.0.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@cloudfour/recommended"
    ],
    "rules": {
      "@cloudfour/n/no-process-exit": "off",
      "@cloudfour/unicorn/no-process-exit": "off"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "exports": {
    "import": "./dist/import-entry.js",
    "types": "./dist/import-entry.d.ts"
  },
  "type": "module"
}
