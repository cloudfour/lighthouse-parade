{
  "name": "lighthouse-parade",
  "version": "2.0.2",
  "description": "A Node.js command line tool that crawls a domain and compiles a report with lighthouse performance data for every page.",
  "bin": "dist/cli.js",
  "files": [
    "dist/*.js",
    "!dist/*.test.js",
    "!dist/*.mock.js"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "urls": "node dist/urls-task.js",
    "combine": "node dist/combine-task.js",
    "check-lint": "eslint . && prettier --check .",
    "lint": "eslint --fix . && prettier --write .",
    "type": "tsc --noEmit",
    "type:watch": "tsc --watch --noEmit",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "changeset": "changeset",
    "version": "changeset version && prettier --write .",
    "release": "npm run build && changeset publish"
  },
  "author": "emerson@cloudfour.com",
  "license": "MIT",
  "dependencies": {
    "csv": "^5.5.0",
    "csv-parse": "^4.15.4",
    "csv-stringify": "^5.6.2",
    "globrex": "^0.1.2",
    "kleur": "^4.1.4",
    "lighthouse": "^9.5.0",
    "log-update": "^4.0.0",
    "sade": "^1.7.4",
    "sanitize-filename": "^1.6.3",
    "simplecrawler": "^1.1.9"
  },
  "engines": {
    "node": "^14.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.10.3",
    "@cloudfour/eslint-plugin": "^16.0.0",
    "@types/globrex": "^0.1.0",
    "@types/jest": "^26.0.23",
    "@types/sade": "^1.7.2",
    "@types/simplecrawler": "^1.1.1",
    "eslint": "^7.27.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "timekeeper": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@cloudfour/recommended",
      "plugin:jest/recommended"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
