{
  "name": "lighthouse-parade",
  "version": "2.1.0",
  "description": "A Node.js command line tool that crawls a domain and compiles a report with lighthouse performance data for every page.",
  "bin": "./index.mjs",
  "files": [
    "dist/*.js"
  ],
  "repository": "cloudfour/lighthouse-parade",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "check-lint": "eslint . && prettier --check .",
    "lint": "eslint --fix . && prettier --write .",
    "type": "tsc",
    "type:watch": "tsc --watch",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "changeset": "changeset",
    "version": "changeset version && prettier --write .",
    "release": "npm run type && npm run build && changeset publish"
  },
  "author": "emerson@cloudfour.com",
  "license": "MIT",
  "dependencies": {
    "chrome-launcher": "^0.15.1",
    "globrex": "^0.1.2",
    "kleur": "^4.1.4",
    "lighthouse": "^9.6.2",
    "log-update": "^5.0.1",
    "sade": "^1.8.1",
    "simplecrawler": "^1.1.9",
    "tinydate": "^1.3.0"
  },
  "engines": {
    "node": "^14.0.0 || ^16.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@cloudfour/eslint-plugin": "^20.0.2",
    "@types/globrex": "^0.1.2",
    "@types/node": "^14.18.21",
    "@types/sade": "^1.7.4",
    "@types/simplecrawler": "^1.1.2",
    "esbuild": "^0.14.47",
    "eslint": "^8.17.0",
    "import-meta-resolve": "^2.0.3",
    "prettier": "^2.6.2",
    "rollup": "^2.75.7",
    "typescript": "~4.7.3",
    "vite": "^2.9.10",
    "vitest": "^0.14.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@cloudfour/recommended"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "type": "module"
}
