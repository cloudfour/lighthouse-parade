{
  "name": "lighthouse-parade",
  "version": "1.0.0",
  "description": "A Node.js command line tool that crawls a domain and compiles a report with lighthouse performance data for every page.",
  "scripts": {
    "test": "jest",
    "urls": "node dist/urls_task.js",
    "reports": "node dist/lighthouse_task.js",
    "combine": "node dist/combine_task.js",
    "scan": "node dist/scan_task.js",
    "check-lint": "eslint . && prettier --check .",
    "lint": "eslint --fix . && prettier --write .",
    "type": "tsc --noEmit",
    "type:watch": "tsc --watch --noEmit",
    "build": "tsc",
    "build:watch": "tsc --watch"
  },
  "author": "emerson@cloudfour.com",
  "license": "MIT",
  "dependencies": {
    "csv": "^5.3.2",
    "lighthouse": "github:GoogleChrome/lighthouse#a1571ba4bc5b7713248ea53e01db085389e634f8",
    "sanitize-filename": "^1.6.3",
    "simplecrawler": "^1.1.9"
  },
  "devDependencies": {
    "@cloudfour/eslint-plugin": "^14.0.0",
    "eslint": "^7.9.0",
    "jest": "^26.1.0",
    "prettier": "^2.1.2",
    "timekeeper": "^2.2.0",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": "plugin:@cloudfour/recommended"
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
